    <script>
        const ctx = document.getElementById('skillsChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Adobe Premiere Pro', 'Adobe Photoshop', ['Adobe After', 'Effects'], 'Adobe InDesign', 'Figma / Adobe XD'],
                datasets: [{
                    label: 'Years of Experience / Proficiency Level',
                    data: [4, 4.5, 2.5, 3.5, 3],
                    backgroundColor: [
                        '#D90429', /* Labour Red */
                        '#2B2D42', /* Labour Dark */
                        '#D90429',
                        '#2B2D42',
                        '#D90429'
                    ],
                    borderColor: 'transparent', /* Removed border for minimalistic look */
                    borderWidth: 0
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(141, 153, 174, 0.1)', /* Lighter grid lines */
                            drawBorder: false /* Removed border */
                        },
                        ticks: {
                            color: '#2B2D42',
                            font: {
                                weight: 'light'
                            }
                        }
                    },
                    y: {
                         grid: {
                            display: false
                        },
                        ticks: {
                           color: '#2B2D42',
                           font: {
                               weight: 'light'
                           }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#2B2D42',
                        titleFont: {
                            size: 16,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 14
                        },
                        callbacks: {
                           title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                           }
                        }
                    }
                }
            }
        });
    </script>

